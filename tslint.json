{
  "extends": ["tslint:recommended", "tslint-config-airbnb"],
  "rules": {
    "no-any": true,
    "prefer-array-literal": [true, { "allow-type-parameters": true }],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "import-name": [
      true,
      { "react": "React", "reactTestRenderer": "renderer" }
    ],
    "member-access": [true, "no-public"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "functions": "never"
        }
      }
    ]
  }
}
